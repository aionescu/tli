{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Toy Language",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#numbers" },
		{ "include": "#bools" },
		{ "include": "#types" },
		{ "include": "#logicOps" },
		{ "include": "#comments" },
		{ "include": "#strings" }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.tl",
				"match": "\\b(if|else|while|print|default|and|or)\\b"
			}]
    },
    "numbers": {
      "patterns": [{
        "name": "constant.numeric.tl",
        "match": "\\b-?[0-9]+\\b"
      }]
    },
    "bools": {
      "patterns": [{
        "name": "constant.language.tl",
        "match": "\\b(True|False)\\b"
      }]
    },
    "types": {
      "patterns": [{
        "name": "entity.name.type",
        "match": "\\b(Int|Bool|_)\\b"
      }]
    },
    "logicOps": {
      "patterns": [{
        "name": "keyword.operator.tl",
        "match": "\\b(and|or)\\b"
      }]
    },
    "comments": {
      "patterns": [{
        "name": "comment.double-dash.tl",
        "match": "--.*$"
      }, {
        "name": "comment.number-sign.tl",
        "match": "^#.*$"
      }, {
        "name": "comment.block.tl",
        "begin": "{-",
        "beginCaptures": { "0": { "name": "punctuation.definition.comment.tl" }},
        "end": "-}",
        "endCaptues": { "0": { "name": "punctuation.definition.comment.tl" }},
        "patterns": [{ "include": "#comments" }]
      }]
    },
		"strings": {
			"name": "string.quoted.double.tl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.tl",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.tl"
}
